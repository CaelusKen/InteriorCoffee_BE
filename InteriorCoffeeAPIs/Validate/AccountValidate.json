{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/account.schema.json",
  "title": "Account",
  "description": "An account in the system",
  "type": "object",
  "properties": {
    "userName": {
      "type": "string",
      "minLength": 1,
      "description": "The user's name"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "description": "The user's password"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The user's email address"
    },
    "phoneNumber": {
      "type": "string",
      "pattern": "^[0-9]{10,12}$",
      "description": "The user's phone number"
    },
    "address": {
      "type": "string",
      "description": "The user's address"
    },
    "status": {
      "type": "string",
      "minLength": 1,
      "description": "The account status"
    },
    "avatar": {
      "type": "string",
      "description": "The user's avatar URL"
    },
    "createdDate": {
      "type": "string",
      "format": "date-time",
      "description": "The date the account was created"
    },
    "merchantId": {
      "type": "string",
      "description": "The merchant ID associated with the account"
    },
    "roleId": {
      "type": "string",
      "description": "The role ID associated with the account"
    }
  },
  "required": [ "userName", "password", "email", "phoneNumber", "status" ]
}
