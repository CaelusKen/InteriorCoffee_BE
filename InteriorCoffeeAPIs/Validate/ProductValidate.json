{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Product",
  "description": "A product in the inventory",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string"
    },
    "categoryId": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "name": {
      "type": "string",
      "maxLength": 200,
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "images": {
      "type": "object",
      "properties": {
        "thumbnail": {
          "type": "string"
        },
        "normalImages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "sellingPrice": {
      "type": "number",
      "minimum": 0
    },
    "discount": {
      "type": "number",
      "minimum": 0
    },
    "truePrice": {
      "type": "number",
      "minimum": 0
    },
    "quantity": {
      "type": "integer",
      "minimum": 0
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "dimensions": {
      "type": "string"
    },
    "materials": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "modelTextureUrl": {
      "type": "string"
    },
    "createdDate": {
      "type": "string",
      "format": "date-time"
    },
    "updatedDate": {
      "type": "string",
      "format": "date-time"
    },
    "campaignId": {
      "type": "string"
    },
    "merchantId": {
      "type": "string"
    }
  },
  "required": [ "categoryId", "name", "sellingPrice", "truePrice", "discount", "status" ]
}
